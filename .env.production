# Production Environment
# All services run in Docker containers

NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Docker internal network)
DATABASE_URL="postgresql://postgres:141532@postgres:5432/social_communication?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=141532
POSTGRES_DB=social_communication
POSTGRES_PORT=5432

# Redis (Docker internal network)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Production secrets - CHANGE THESE!
JWT_ACCESS_SECRET=CHANGE-THIS-IN-PRODUCTION-SUPER-SECRET-ACCESS-KEY
JWT_REFRESH_SECRET=CHANGE-THIS-IN-PRODUCTION-SUPER-SECRET-REFRESH-KEY
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Production CORS - UPDATE WITH YOUR DOMAINS
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Production logging
LOG_LEVEL=info
LOG_DIR=./logs

# Security settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
METRICS_ENABLED=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Jitsi (production)
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your-production-jitsi-app-id
JITSI_APP_SECRET=your-production-jitsi-app-secret
JITSI_ROOM_PREFIX=prod-social-comm-

# Docker Compose settings
APP_PORT=3000