# ==============================================================================
# Development Environment Variables
# ==============================================================================
# Copy this file to .env for Docker development:
#   cp .env.dev.example .env
#
# All services run in Docker, so use Docker service names (postgres, redis)
# ==============================================================================

# Node Environment
NODE_ENV=development
PORT=3000

# Database Configuration (Docker service name)
DATABASE_URL=postgresql://postgres:141532@postgres:5432/social_communication?schema=public

# Redis Configuration (Docker service name)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=dev-secret-change-in-production-abc123
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-xyz789
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration (Add your frontend URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Jitsi Configuration
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your-jitsi-app-id
JITSI_APP_SECRET=your-jitsi-app-secret
JITSI_ROOM_PREFIX=social-comm-dev-

# Logging
LOG_LEVEL=debug

# Security (Lower for faster development)
BCRYPT_ROUNDS=10

# File Uploads
MAX_FILE_SIZE=10485760
