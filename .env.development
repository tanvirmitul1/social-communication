# Development Environment
# Backend runs locally, services in Docker

NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (Docker service, accessed from host)
DATABASE_URL="postgresql://postgres:141532@localhost:5432/social_communication?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=141532
POSTGRES_DB=social_communication
POSTGRES_PORT=5432

# Redis (Docker service, accessed from host)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Development secrets (not secure, for dev only)
JWT_ACCESS_SECRET=dev-access-secret-key-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Development CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Development logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Other settings
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
METRICS_ENABLED=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# Jitsi (development)
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your-jitsi-app-id
JITSI_APP_SECRET=your-jitsi-app-secret
JITSI_ROOM_PREFIX=dev-social-comm-