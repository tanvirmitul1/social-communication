# Development Environment Configuration
# DO NOT USE IN PRODUCTION

# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (Docker)
# Use 'postgres' as host when running app in Docker
# Use 'localhost' when running app locally (npm run dev)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/social_communication?schema=public"

# Redis (Docker)
# Use 'redis' as host when running app in Docker
# Use 'localhost' when running app locally (npm run dev)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT (Development - NOT SECURE FOR PRODUCTION)
# Generate secure secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=dev-secret-change-in-production-use-openssl-rand-base64-32
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-use-openssl-rand-base64-32
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=10
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Jitsi (Optional - for video calls)
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=
JITSI_APP_SECRET=
JITSI_ROOM_PREFIX=social-comm-dev-

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Monitoring
SENTRY_DSN=
METRICS_ENABLED=true

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
