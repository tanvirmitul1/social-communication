# Production Environment Configuration
# COPY THIS FILE TO .env.production AND UPDATE ALL VALUES

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Production)
# IMPORTANT: Update with your production database credentials
DATABASE_URL="postgresql://DB_USER:DB_PASSWORD@DB_HOST:5432/social_communication?schema=public&connection_limit=10&pool_timeout=20"

# Redis (Production)
# IMPORTANT: Update with your production Redis credentials
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password
REDIS_DB=0

# JWT (CRITICAL: Generate strong secrets)
# Generate: openssl rand -base64 64
JWT_ACCESS_SECRET=CHANGE_THIS_TO_STRONG_SECRET_GENERATED_WITH_OPENSSL
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_STRONG_SECRET_GENERATED_WITH_OPENSSL
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Jitsi (Optional - for video calls)
# For production, use your own Jitsi server
JITSI_DOMAIN=meet.yourdomain.com
JITSI_APP_ID=your-jitsi-app-id
JITSI_APP_SECRET=your-jitsi-app-secret
JITSI_ROOM_PREFIX=social-comm-

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
METRICS_ENABLED=true

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
