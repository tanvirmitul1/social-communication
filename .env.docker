# ==============================================================================
# Docker Environment Configuration
# ==============================================================================
# This file contains environment variables for Docker deployment.
# Copy this file to .env before running docker-compose up
#
# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -base64 64
# ==============================================================================

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=141532
POSTGRES_DB=social_communication
POSTGRES_PORT=5432

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets
# CRITICAL: Change these in production!
# Generate with: openssl rand -base64 64
JWT_ACCESS_SECRET=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:80,http://localhost:5173,http://localhost

# Jitsi Video Calling
# Get credentials from: https://jaas.8x8.vc/
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your-jitsi-app-id
JITSI_APP_SECRET=your-jitsi-app-secret
JITSI_ROOM_PREFIX=social-comm-

# File Upload
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
