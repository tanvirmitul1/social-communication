# Test Environment
# Using the same database as development but with a different schema

NODE_ENV=test
PORT=3001
API_VERSION=v1

# Database (Docker service, accessed from host)
DATABASE_URL="postgresql://postgres:141532@localhost:5432/social_communication_test?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=141532
POSTGRES_DB=social_communication_test
POSTGRES_PORT=5432

# Redis (Docker service, accessed from host)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Test secrets
JWT_ACCESS_SECRET=test-access-secret-key
JWT_REFRESH_SECRET=test-refresh-secret-key
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Test CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Test logging
LOG_LEVEL=info
LOG_DIR=./logs

# Other settings
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
METRICS_ENABLED=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Jitsi (test)
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=test-jitsi-app-id
JITSI_APP_SECRET=test-jitsi-app-secret
JITSI_ROOM_PREFIX=test-social-comm-